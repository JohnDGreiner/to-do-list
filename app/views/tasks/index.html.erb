<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<div>
  <thead>
    <tr>
      <th>Description</th>
      <th>Order number</th>
      <th>Due at</th>
      <th>Is completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div>
    <% @tasks.each do |task| %>
      <div class="task-form-container">
        <%= render partial: 'update_task', locals: { task: task } %>
      </div>
    <% end %>
  </div>
</div>


<%= link_to 'New Task', new_task_path %>
